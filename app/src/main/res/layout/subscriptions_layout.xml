<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subscription_title"
            android:text="Subscription"
            android:textSize="20sp"
            android:layout_alignParentTop="true"/>

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_toEndOf="@+id/subscription_title"
            android:layout_marginStart="13dp"
            android:id="@+id/subscription_count"
            android:textSize="20sp"/>

        <TextView
            android:text="Preview of the subscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subscription_preview"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/subscription_title"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/favorite_subscription"
            android:layout_alignTop="@id/subscription_count"
            android:layout_marginTop="4dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:button="@drawable/ic_star"/>

        <TextView
            android:text="0/0/0"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/subscription_date"
            android:layout_toLeftOf="@id/favorite_subscription"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>